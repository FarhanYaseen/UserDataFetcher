{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["jest", "node"], // Add Jest and Node types
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*", "jest.config.js"],
  "exclude": ["node_modules", "dist"]
}
